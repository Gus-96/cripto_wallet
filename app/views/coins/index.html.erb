<h1>Cripto Moedas</h1>

<table>
  <thead>
    <tr>
      <th>Imagem</th>
      <th>Nome</th>
      <th>Sigla</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @coins.each do |coin| %>
      <tr>
        <td><%= image_tag coin.url_image, size:"50x25" %></td>
        <td><%= coin.description %></td>
        <td><%= coin.acronym %></td>
        <td><%= link_to 'Detalhe', coin %></td>
        <td><%= link_to 'Editar', edit_coin_path(coin) %></td>
        <td><%= link_to 'Apagar', coin, method: :delete, data: { confirm: 'VocÃª tem certeza que deseja apagar essa moeda?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

